#!/bin/bash

set -x

error_handler() {
   echo "
###################################
## chroot script: ERROR detected. #
###################################
"

   exit 1
} 

trap "error_handler" ERR INT TERM

own_filename="$(basename $0)"
case $skip_scripts in
   *$own_filename*) true "INFO: Skipping $own_filename, because skip_scripts includes it."
                    exit 0
                    ;;
esac

## This is not functional yet.
## Help welcome.
## See design notes.
## https://sourceforge.net/p/whonix/wiki/Design-Shared/#boot-manager-configuration

echo "
## For more verbose output while booting, to show the system does not hang,
## GRUB_CMDLINE_LINUX_DEFAULT="" should get appended to grub,
## We need to run update-grub2 to activate the change.
## Bug: It does not work inside chroot.
## TODO CHROOT: update-grub2
"

